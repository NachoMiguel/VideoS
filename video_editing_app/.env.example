# AI Video Slicer - Environment Configuration
# Copy this file to .env and fill in your actual API keys

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# ElevenLabs API Configuration (4 accounts for credit rotation)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_1
ELEVENLABS_API_KEY_2=your_elevenlabs_api_key_2
ELEVENLABS_API_KEY_3=your_elevenlabs_api_key_3
ELEVENLABS_API_KEY_4=your_elevenlabs_api_key_4
ELEVENLABS_DEFAULT_VOICE_ID=nPczCjzI2devNBz1zQrb

# Google Custom Search API
GOOGLE_CUSTOM_SEARCH_API_KEY=your_google_search_api_key
GOOGLE_CUSTOM_SEARCH_ENGINE_ID=your_google_search_engine_id

# YouTube Data API
YOUTUBE_API_KEY=your_youtube_api_key

# Application Configuration
SECRET_KEY=your_secret_key_here_change_in_production

# Mode Configuration
TEST_MODE_ENABLED=false
DEVELOPMENT_SKIP_MODE=false

# Test Mode Settings (only used when TEST_MODE_ENABLED=true)
USE_SAVED_SCRIPT=false
USE_KNOWN_CHARACTERS=false
USE_SAVED_AUDIO=false

# Credit Protection
CREDIT_PROTECTION_ENABLED=true
MAX_OPENAI_REQUESTS_PER_HOUR=100
MAX_ELEVENLABS_REQUESTS_PER_HOUR=50

# Performance Settings
PARALLEL_PROCESSING_ENABLED=true
MAX_WORKERS=4
FACE_DETECTION_CACHE_SIZE=1000
VIDEO_CLIP_CACHE_SIZE=50 